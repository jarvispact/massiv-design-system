{
    "name": "massiv-design-system",
    "version": "0.0.58-next.8",
    "description": "a simple design system",
    "main": "dist/index.js",
    "module": "dist/index.es.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' TS_NODE_PROJECT='tsconfig.build.json' mocha -r ts-node/register 'test/**/*.spec.ts'",
        "clean": "rm -rf ./dist",
        "build": "bash -c 'rollup -c'",
        "storybook": "start-storybook -p 6006 --docs",
        "build-storybook": "build-storybook --docs",
        "tsc": "bash -c tsc --noEmit",
        "lint": "eslint 'src/**/*.ts{,x}'",
        "prettier": "prettier --write 'src/**/*.ts{,x}'"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.ts{,x}": [
            "npm run tsc",
            "npm run prettier",
            "npm run lint",
            "npm run test"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jarvispact/massiv-design-system.git"
    },
    "keywords": [
        "react",
        "design",
        "system",
        "massiv"
    ],
    "author": "jarvispact <jarvispact@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/jarvispact/massiv-design-system/issues"
    },
    "homepage": "https://github.com/jarvispact/massiv-design-system#readme",
    "devDependencies": {
        "@babel/core": "^7.14.3",
        "@rollup/plugin-commonjs": "^19.0.0",
        "@rollup/plugin-node-resolve": "^13.0.0",
        "@storybook/addon-actions": "^6.2.9",
        "@storybook/addon-docs": "^6.2.9",
        "@storybook/react": "^6.2.9",
        "@types/chai": "^4.2.18",
        "@types/mocha": "^8.2.2",
        "@typescript-eslint/eslint-plugin": "^4.25.0",
        "@typescript-eslint/parser": "^4.25.0",
        "babel-loader": "^8.2.2",
        "babel-preset-react-app": "^10.0.0",
        "chai": "^4.3.4",
        "eslint": "^7.27.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-prettier": "3.4.0",
        "eslint-plugin-react": "^7.23.2",
        "husky": "4.0.0",
        "lint-staged": "11.0.0",
        "mocha": "^8.4.0",
        "npm-check-updates": "^11.6.0",
        "prettier": "^2.3.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "rollup": "^2.50.4",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-plugin-typescript2": "^0.30.0",
        "ts-node": "^10.0.0",
        "typescript": "^4.3.2"
    },
    "peerDependencies": {
        "react": ">=17.0.2",
        "react-dom": ">=17.0.2"
    },
    "dependencies": {
        "@emotion/css": "^11.1.3"
    }
}
