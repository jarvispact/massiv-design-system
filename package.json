{
    "name": "massiv-design-system",
    "version": "0.0.48",
    "description": "a simple design system",
    "main": "dist/index.js",
    "module": "dist/index.es.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "clean": "rm -rf ./dist",
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "git-add-dist": "git add ./dist",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook",
        "update:check": "ncu",
        "update:do": "ncu -u && npm i",
        "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "tsc --noEmit --allowJs --skipLibCheck --jsx react --esModuleInterop"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jarvispact/massiv-design-system.git"
    },
    "keywords": [
        "react",
        "design",
        "system",
        "massiv"
    ],
    "author": "jarvispact <jarvispact@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/jarvispact/massiv-design-system/issues"
    },
    "homepage": "https://github.com/jarvispact/massiv-design-system#readme",
    "devDependencies": {
        "@babel/core": "^7.10.3",
        "@rollup/plugin-commonjs": "^13.0.0",
        "@rollup/plugin-node-resolve": "^8.1.0",
        "@storybook/addon-actions": "^5.3.19",
        "@storybook/react": "^5.3.19",
        "@types/styled-components": "^5.1.0",
        "@typescript-eslint/eslint-plugin": "^3.4.0",
        "@typescript-eslint/parser": "^3.4.0",
        "babel-loader": "^8.1.0",
        "babel-preset-react-app": "^9.1.2",
        "eslint": "^7.3.1",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.20.0",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "material-design-icons-iconfont": "^5.0.1",
        "npm-check-updates": "^7.0.1",
        "prettier": "^2.0.5",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "rollup": "^2.18.0",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-peer-deps-external": "^2.2.2",
        "rollup-plugin-typescript2": "^0.27.1",
        "typescript": "^3.9.5"
    },
    "peerDependencies": {
        "react": ">=16.13.1",
        "react-dom": ">=16.13.1"
    },
    "dependencies": {
        "styled-components": "^5.1.1"
    }
