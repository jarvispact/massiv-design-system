{
    "name": "massiv-design-system",
    "version": "0.0.55",
    "description": "a simple design system",
    "main": "dist/index.js",
    "module": "dist/index.es.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "clean": "rm -rf ./dist",
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "git-add-dist": "git add ./dist",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook",
        "update:check": "ncu",
        "update:do": "ncu -u && npm i",
        "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "rm -rf ./dist",
            "rollup -c",
            "tsc --noEmit --allowJs --skipLibCheck --jsx react --esModuleInterop"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jarvispact/massiv-design-system.git"
    },
    "keywords": [
        "react",
        "design",
        "system",
        "massiv"
    ],
    "author": "jarvispact <jarvispact@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/jarvispact/massiv-design-system/issues"
    },
    "homepage": "https://github.com/jarvispact/massiv-design-system#readme",
    "devDependencies": {
        "@babel/core": "^7.12.10",
        "@rollup/plugin-commonjs": "^17.0.0",
        "@rollup/plugin-node-resolve": "^11.0.1",
        "@storybook/addon-actions": "^6.1.11",
        "@storybook/react": "^6.1.11",
        "@types/styled-components": "^5.1.7",
        "@typescript-eslint/eslint-plugin": "^4.12.0",
        "@typescript-eslint/parser": "^4.12.0",
        "babel-loader": "^8.2.2",
        "babel-preset-react-app": "^10.0.0",
        "eslint": "^7.17.0",
        "eslint-config-prettier": "^7.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-react": "^7.22.0",
        "husky": "^4.3.7",
        "lint-staged": "^10.5.3",
        "material-design-icons-iconfont": "^6.1.0",
        "npm-check-updates": "^10.2.5",
        "prettier": "^2.2.1",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "rollup": "^2.36.1",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-plugin-typescript2": "^0.29.0",
        "typescript": "^4.1.3"
    },
    "peerDependencies": {
        "react": ">=17.0.1",
        "react-dom": ">=17.0.1"
    },
    "dependencies": {
        "styled-components": "^5.2.1"
    }
}
