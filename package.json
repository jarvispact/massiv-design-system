{
    "name": "massiv-design-system",
    "version": "0.0.58-next.0",
    "description": "a simple design system",
    "main": "dist/index.js",
    "module": "dist/index.es.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'test/**/*.spec.ts'",
        "clean": "rm -rf ./dist",
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "git-add-dist": "git add ./dist",
        "storybook": "start-storybook -p 6006 --docs",
        "build-storybook": "build-storybook --docs",
        "update:check": "ncu",
        "update:do": "ncu -u && npm i",
        "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "tsc --noEmit --allowJs --skipLibCheck --jsx react --esModuleInterop"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jarvispact/massiv-design-system.git"
    },
    "keywords": [
        "react",
        "design",
        "system",
        "massiv"
    ],
    "author": "jarvispact <jarvispact@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/jarvispact/massiv-design-system/issues"
    },
    "homepage": "https://github.com/jarvispact/massiv-design-system#readme",
    "devDependencies": {
        "@babel/core": "^7.13.16",
        "@rollup/plugin-commonjs": "^18.0.0",
        "@rollup/plugin-node-resolve": "^11.2.1",
        "@storybook/addon-actions": "^6.2.9",
        "@storybook/addon-docs": "^6.2.9",
        "@storybook/react": "^6.2.9",
        "@types/chai": "^4.2.17",
        "@types/mocha": "^8.2.2",
        "@types/styled-components": "^5.1.9",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "babel-loader": "^8.2.2",
        "babel-preset-react-app": "^10.0.0",
        "chai": "^4.3.4",
        "eslint": "^7.24.0",
        "eslint-config-prettier": "^8.2.0",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.23.2",
        "husky": "^6.0.0",
        "lint-staged": "^10.5.4",
        "mocha": "^8.3.2",
        "npm-check-updates": "^11.5.1",
        "prettier": "^2.2.1",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "rollup": "^2.45.2",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-plugin-typescript2": "^0.30.0",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.4"
    },
    "peerDependencies": {
        "react": ">=17.0.2",
        "react-dom": ">=17.0.2"
    },
    "dependencies": {
        "@emotion/css": "^11.1.3"
    }
}
